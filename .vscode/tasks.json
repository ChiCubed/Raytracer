{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "osx": {
        "version": "0.1.0",
        "command": "sh",
        "isShellCommand": true,
        "args": ["-c"],
        "showOutput": "always",
        "tasks": [
            {
                "taskName": "build",
                "args": [
                    "g++ -std=c++11 main.cpp"
                ],
                "isBuildCommand": true,
                "suppressTaskName": true
            },
            {
                "taskName": "run",
                "args": [
                    "./a.out"
                ],
                "isTestCommand": true,
                "suppressTaskName": true
            }
        ]
    }
}